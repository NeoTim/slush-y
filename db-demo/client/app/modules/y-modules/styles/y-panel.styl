.y-divider
  height 8px
  float left
  width 100%

  &.last
    border-top 1px solid #ddd

  &.y-divider-large
    height 24px


.y-panel
  margin 0
  padding 0
  position relative
  height 100%

  &.filled
    background-color white
    shadow-z-2();



  .y-panel-header
    position relative
    float left
    width 100%
    height 64px
    padding-left 80px
    // margin-bottom 64px

    &.large
      position relative
      float left
      padding-top 50px
      height 140px
      font-size 3em
      padding-left 56px

    .y-panel-heading
      float left
      padding-top 20px
      font-size 20px

    .y-panel-header-actions
      float right

  .y-panel-toolbar
    width 100%
    position relative
    // clear both
    padding 0 24px
    float left

    .y-panel-toolbar-left
      float right
      clear both

  .y-panel-content
    float left
    width 100%
    padding 0 24px


  .y-list,
  ul.y-list
    position relative
    // top 64px
    margin 0
    padding 0 0 0 24px

    .y-item
      padding 0
      // border-bottom 1px solid #eee
      // padding-left 32px

      .y-item-action
        float left
        width 40px
        font-size 2em
        padding-top 10px

      .y-item-text
        float left
        padding-top 10px
        font-size 18px
        line-height 2em

.y-list-group

  width 100%
  float left

  .action
    float left
    width 56px
    padding-top 15px
    font-size 1.5em

  .items
    width calc(100% - 56px)
    float left

