toolbar-tool-height = 64px
toolbar-height = 64px
toolbar-medium-tall-height = 88px
toolbar-tall-height = 192px
toolbar-indent-margin = 64px

baseline-grid = 8px !default


.y-toolbar
  position fixed
  top 0
  left 0
  font-size 1.3em
  min-height baseline-grid * 8
  width 100%

  &.y-tall
    height toolbar-tall-height


  &.y-medium-tall
    height toolbar-medium-tall-height

    .y-toolbar-tools
      height 48px



  .y-indent
    margin-left toolbar-indent-margin


.y-tool
  height toolbar-tool-height
  font-weight normal
  padding 0 10px
  margin 0
  line-height 30px
  font-size 1.3em
  text-decoration none

  &:hover,
  &:active,
  &:focus,
  &.active
    text-decoration none

  &.btn
    background-color inherit
    &:hover
      background-color inherit
      box-shadow none
      -webkit-box-shadow none

  > *
    margin 0 8px

  h2, h3
    font-weight normal

  a
    color inherit
    text-decoration none


