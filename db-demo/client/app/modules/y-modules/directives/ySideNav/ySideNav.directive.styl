
.y-side-nav

  width 256px
  height 100%
  position fixed
  display block
  top 0
  left 0
  z-index 40009
  background-color white
  box-shadow 2px 0 4px rgba(0,0,0,.3)
  -webkit-box-shadow 2px 0 4px rgba(0,0,0,.3)
  transition left 300ms ease-in-out
  -webkit-transition left 300ms ease-in-out

.y-side-toolbar
  height 64px
  width 100%

.y-side-header
  height 80px
  width 100%


.y-overlay
  z-index 4010
  display none
  top 0
  width 100%
  height 100%
  position fixed
  background-color rgba(0,0,0,.3)
  transition display 400ms ease-in-out 0
  -webkit-transition display 400ms ease-in-out 0

body
  &.y-closed
    .y-overlay
      display none
    .y-side-nav
      left -258px

  &.y-open
    .y-overlay
      display block
    .y-side-nav
      left 0px


